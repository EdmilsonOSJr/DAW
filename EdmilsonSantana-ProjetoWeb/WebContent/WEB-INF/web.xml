<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>EdmilsonSantana-ProjetoWeb</display-name>
  <welcome-file-list>
    <welcome-file>lista-alunos.jsp</welcome-file>

  </welcome-file-list>
  
  <servlet>
  	<servlet-name>olamundo</servlet-name>
  	<servlet-class>br.edu.ifsudestemg.barbacena.servlet.OlaMundo</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>olamundo</servlet-name>
  	<url-pattern>/ola</url-pattern>
  </servlet-mapping>
   
   
   <servlet>
   	<servlet-name>adicionaAluno</servlet-name>
   	<servlet-class>br.edu.ifsudestemg.barbacena.servlet.AdicionaAlunoServlet</servlet-class>
   </servlet>
   
   <servlet-mapping>
   	<servlet-name>adicionaAluno</servlet-name>
   	<url-pattern>/adicionaAluno</url-pattern>
   </servlet-mapping>
   
   <servlet>
   	<servlet-name>adicionaProfessor</servlet-name>
   	<servlet-class>br.edu.ifsudestemg.barbacena.servlet.AdicionaProfessorServlet</servlet-class>
   </servlet>
   
   <servlet-mapping>
   	<servlet-name>adicionaProfessor</servlet-name>
   	<url-pattern>/adicionaProfessor</url-pattern>
   </servlet-mapping>
   
   <error-page>
   	<exception-type>java.lang.Exception</exception-type>
   	<location>/erro.html</location>
   </error-page>
   
   <error-page>
   	<error-code>404</error-code>
   	<location>/404.html</location>
   </error-page>
   
</web-app>